<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/editetext_view">

        <RadioGroup
            android:id="@+id/group"
            android:layout_width="match_parent"
            android:padding="@dimen/_7sdp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/increaseSaving"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Increase Savings/Reducing Hobbies"
                android:textColor="@color/color4"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/increaseHobbies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Increase Hobbies/Reducing saving"
                android:textColor="@color/color4" />
        </RadioGroup>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/updatePlane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_view"
            android:elevation="@dimen/_5sdp"
            android:text="Update Plane"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            android:ems="10"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/group"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>