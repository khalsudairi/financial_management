<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Presentation.Auth.Registration.Registration"
    android:background="@drawable/background3">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/baseline_arrow_back_24"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/arrowBack"
            android:layout_margin="@dimen/_7sdp"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/arrowBack"/>
        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/editetext_view"
            android:drawablePadding="@dimen/_5sdp"
            android:hint="User Name"
            android:inputType="text"
            android:padding="@dimen/_7sdp"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintTop_toBottomOf="@id/title2" />
        <EditText
            android:id="@+id/familyNumbre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/editetext_view"
            android:drawablePadding="@dimen/_5sdp"
            android:hint="Family Number"
            android:inputType="number"
            android:padding="@dimen/_7sdp"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintTop_toBottomOf="@id/userName" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/editetext_view"
            android:drawablePadding="@dimen/_5sdp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_7sdp"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintTop_toBottomOf="@id/familyNumbre" />

        <LinearLayout
            android:id="@+id/passwordLinear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/editetext_view"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/emailEditText"
            app:layout_constraintStart_toStartOf="@id/emailEditText"
            app:layout_constraintTop_toBottomOf="@id/emailEditText">

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/color5"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="@dimen/_7sdp"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor"
                android:textSize="@dimen/_16sdp"
                app:layout_constraintTop_toBottomOf="@id/title2" />

            <ImageView
                android:id="@+id/showPassword"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/baseline_visibility_off_24" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/conPasswordLinear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/editetext_view"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/emailEditText"
            app:layout_constraintStart_toStartOf="@id/emailEditText"
            app:layout_constraintTop_toBottomOf="@id/passwordLinear">

            <EditText
                android:id="@+id/conPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/color5"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="@dimen/_7sdp"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor"
                android:textSize="@dimen/_16sdp"
                app:layout_constraintTop_toBottomOf="@id/title2" />

            <ImageView
                android:id="@+id/showPassword2"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/baseline_visibility_off_24" />
        </LinearLayout>
        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/editetext_view"
            android:drawablePadding="@dimen/_5sdp"
            android:hint="phone number"
            android:inputType="phone"
            android:padding="@dimen/_7sdp"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintTop_toBottomOf="@id/conPasswordLinear" />
        <EditText
            android:id="@+id/income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/editetext_view"
            android:drawablePadding="@dimen/_5sdp"
            android:hint="Fixed income"
            android:inputType="number"
            android:padding="@dimen/_7sdp"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintTop_toBottomOf="@id/phone" />

        <EditText
            android:id="@+id/budget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/editetext_view"
            android:drawablePadding="@dimen/_5sdp"
            android:hint="Unstable income"
            android:inputType="number"
            android:padding="@dimen/_7sdp"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintTop_toBottomOf="@id/income" />
          <androidx.appcompat.widget.AppCompatButton
              android:id="@+id/signUp"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/_10sdp"
              android:background="@drawable/button_view"
              android:elevation="@dimen/_5sdp"
              android:text="Create Account"
              android:textAllCaps="false"
              android:textColor="@color/white"
              android:textSize="@dimen/_18sdp"
              app:layout_constraintEnd_toEndOf="@id/emailEditText"
              app:layout_constraintStart_toStartOf="@id/emailEditText"
              app:layout_constraintTop_toBottomOf="@id/budget" />

          <include
              android:id="@+id/dividor"
              layout="@layout/auth_dividor"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/_5sdp"
              android:layout_marginTop="@dimen/_10sdp"
              android:layout_marginEnd="@dimen/_5sdp"
              app:layout_constraintTop_toBottomOf="@id/signUp" />

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/_10sdp"
              android:orientation="horizontal"
              android:layout_marginBottom="@dimen/_10sdp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/dividor">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Do you have account "
                  android:textColor="@color/textColor"
                  android:textSize="@dimen/_14sdp"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent" />

              <TextView
                  android:id="@+id/signIn"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="login"
                  android:textColor="@color/color4"
                  android:textSize="@dimen/_14sdp"
                  android:textStyle="bold"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent" />
          </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>